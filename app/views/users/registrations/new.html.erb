<h2>Registro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="col-md-6">
    <%= f.label :email, "Correo", class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :password, "Contraseña", class: "form-label" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :password_confirmation, "Repite contraseña", class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="col-md-6">
    <div class="mt-3 ">
      <%= f.submit "Regístrate", class: "btn btn-primary" %>
    </div>
  </div>

<% end %>