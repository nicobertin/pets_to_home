<%= search_form_for @q, url: :kindergartens do |f| %>
  <div class="form-group">
    <%= f.label :name, "Nombre" %>
    <%= f.search_field :name_cont, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :city_id_eq, "Ciudad" %>
    <%= f.collection_select :city_id_eq, City.all, :id, :name, { include_blank: true }, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Buscar", class: "btn btn-primary" %>
  </div>

<% end %>

<div id="kindergartens">
  <% @kindergartens.each do |kindergarten| %>
    <%= link_to kindergarten_path(kindergarten), class: "text-decoration-none text-black" do %>
      <%= render kindergarten %>
    <% end %>
  <% end %>
  <%= paginate @kindergartens %>

</div>
