<div id="<%= dom_id kindergarten %>" class="card shadow-sm border-0 mb-3">
  <div class="card-body">

    <%= image_tag kindergarten.image, class: "w-100" if kindergarten.image.attached? %>



    <p>
      <strong>Name:</strong>
      <%= kindergarten.name %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= kindergarten.description %>
    </p>

    <p>
      <strong>City:</strong>
      <%= kindergarten.city.name %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= kindergarten.phone %>
    </p>

    <p>
      <strong>User:</strong>
      <%= kindergarten.user.email %>
    </p>

    <p>
      <strong>Pets:</strong>
      <%= kindergarten.pets.map(&:name).join(", ") %>
    </p>

    <p class="mb-0">
      <strong>Price:</strong>
      <%= kindergarten.price %>
    </p>

  </div>
</div>
