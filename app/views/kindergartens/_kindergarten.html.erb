<div id="<%= dom_id kindergarten %>">
  <p>
    <strong>Name:</strong>
    <%= kindergarten.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= kindergarten.description %>
  </p>

  <p>
    <strong>City:</strong>
    <%= kindergarten.city.name %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= kindergarten.phone %>
  </p>

  <p>
    <strong>User:</strong>
    <%= kindergarten.user_id %>
  </p>

  <p>
    <strong>Pets:</strong>
    <%= kindergarten.pets.map(&:name).join(", ") %>
  </p>


</div>
